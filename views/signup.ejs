<%- include ("./partials/head.ejs",{title:"Create Account"}) %>
<body>
    <%- include ("./header.ejs",{loggedin:loggedin}) %>
    
        
        <div class="signupbox">
           
            <h1>Create New Account</h1>
            <form class="w-75 mx-2" action="/users/register" method="POST">
                <label class="form-label">Full Name</label>
                <input class="form-control" type="text" name="name" placeholder="Enter your full name">
                
                <label class="form-label">New Password</label>
                <input class="form-control" type="password" name="password" placeholder="Enter New Password">
                <label class="form-label">Email</label>
                <input class="form-control" type="email" name="email" placeholder="Enter your email address">
                <label class="form-label">Mobile Number</label>
                <input class="form-control" type="number" name="number" placeholder="Enter your mobile number">
                <button class="my-2 btn btn-primary">Register</button>
            </form>
        </div>
    </body>
</html>